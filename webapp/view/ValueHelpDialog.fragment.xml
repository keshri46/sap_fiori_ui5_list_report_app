<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		id="selectDialogOrder"
		title="Select Order"
		items="{OrdersModel>/}"
		search=".onValueHelpSearchOrder"
		confirm=".onValueHelpCloseOrder"
		cancel=".onValueHelpCloseOrder">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			icon="sap-icon://my-sales-order"
			title="{i18n>ordrId} : {OrdersModel>OrderID}"
			adaptTitleSize="true"
			description="{i18n>custId} : {OrdersModel>CustomerID}" />
	</SelectDialog>
</core:FragmentDefinition>
